{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "jsx": "react-jsx" // Add if using React with JSX
  },
  "include": [
    "src/**/*"
  ]
}